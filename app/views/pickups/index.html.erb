<div class="page-header">
  <h1>
    Pickups
    <a href="/pickups/new" class="btn btn-lg btn-success">New Pickup</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Materials needed</th>
        <th>Package destination</th>
        <th>Image upload</th>
        <th>Special instructions</th>
        <th>Actions</th>
      </tr>

      <% @pickups.each do |pickup| %>
      <tr>
        <td><%= pickup.user.email %></td>
        <td><%= pickup.date %></td>
        <td><%= pickup.materials_needed %></td>
        <td><%= pickup.package_destination %></td>
        <td><img src='<%= pickup.image_upload %>' class='img-responsive'></td>
        <td><%= pickup.special_instructions %></td>
        <td>
          <a href="/pickups/<%= pickup.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == pickup.user %>
            <a href="/pickups/<%= pickup.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_pickup/<%= pickup.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pickups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>